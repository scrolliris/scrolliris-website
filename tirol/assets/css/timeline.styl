$timeline_main_color = darken(#ededed, 3%)
$timeline_line_color = darken($timeline_main_color, 3%)
$timeline_content_color = lighten($timeline_main_color, 3%)

arrow(direction)
    content ''
    position absolute
    width 0
    height 0
    top 24px
    if direction == 'left'
      left auto
    else
      left 100%
    right 100%
    border 7px solid transparent
    border-color transparent
    if direction == 'left'
      border-right-color $timeline_content_color
    else
      border-left-color $timeline_content_color

#timeline
  width 100%
  position relative
  padding 2em 0
  margin-top 1.9rem
  margin-bottom 1.9rem
  &::before
    content ''
    position absolute
    top 0
    height 100%
    left 50%
    width 3px
    background $timeline_line_color

  .timeline-block
    min-height 280px
    padding 0
    margin 2.62rem 0
    position relative

.timeline-icon
  position absolute
  text-align center
  vertical-align middle
  background #fbfbfb
  width 48px
  height 48px
  top 0
  left 50%
  border-radius 50%
  border 3px solid $timeline_content_color
  margin-left -24px // 64px / 2
  svg
    margin-top -13px
    margin-left -11px
    display block
    position relative
    left 50%
    top 50%

.timeline-content
  padding 0.82rem 1.82rem
  text-align left
  position relative
  border-radius 2px
  color darken(#838383, 2%)
  background-color $timeline_content_color
  box-shadow 0 2px 0 darken($timeline_main_color, 3%)
  min-height 200px
  min-width 40%
  max-width 40%
  float left
  margin 0 0 0 36px
  &::before
    arrow(right)
  &.is-hidden
    visibility hidden
  &.bounce-in
    visibility visible
    animation bounce-1 0.55s
  h2
    margin 0.84rem 0 0.71rem 0
  .timeline-date
    font-size 0.88em

.timeline-block:nth-child(even)
  .timeline-content
    float right
    margin 0 36px 0 0
    &::before
      arrow(left)

.timeline-content
  h2,
  p
    word-wrap break-word

@keyframes bounce-1
  0%
    opacity 0
    transform scale(0.6)

  60%
    opacity 1
    transform scale(1.15)

  100%
   htransform scale(1)

@media only screen and (max-width: 1024px)
  #timeline
    &::before
      left 50%

  .timeline-icon
    display none

  .timeline-block:nth-child(odd)
    .timeline-content
      float none
      margin 0 6px
      max-width 90%
      &::before
        border none

  .timeline-block:nth-child(even)
    .timeline-content
      float none
      margin 0 6px
      max-width 90%
      &::before
        border none
