body
  color #838383
  background-color #fbfbfb

@font-face
  font-family 'Raleway Thin'
  src url('../../../static/font/webfonts/raleway_thin-webfont.woff') format('woff'),
      url('../../../static/font/webfonts/raleway_thin-webfont.ttf') format('truetype')

// general tag
a
  color #a380d8
  text-decoration none

input[type="text"]
  border-radius 2px
  border 1px solid #333333
  padding 0.26rem 0.46rem
  margin 0 0.38rem
  min-width 13.12rem

// section
.header
  .description
    font-size 2.15rem
    span
      font-size 1.56rem
  h1
    font-family 'Raleway Thin', sans-serif
    font-size 1.56em
    vertical-align middle
    text-align center
    width 6.42em
    height 1.71rem
    padding 0.78rem 1.24rem
    // general
    .scroll
      color lighten(#575551, 9%)
    .iris
      color lighten(#705e8d, 66%)
    // grey
    //.scroll
    //  color lighten(#705E8D, 33%)
    //.iris
    //  color darken(#c4c4c0, 6%)
    // inverted
    //.scroll
    //  color lighten(#575551, 42%)
    //.iris
    //  color darken(#705E8D, 29%)
  .logo-img
    vertical-align middle
    margin 0
    width 360px
    padding 8px 12px
    border 1px solid #f2f2f2

.footer
  background-color #121517
  background linear-gradient(#1f1d1f, #141412 38%)
  color #ffffff
  ul
    padding-left 0
    li
      list-style none


// heading
.content
  h2
    font-size 1.8rem
  h3
    font-size 0.95rem
    font-weight bold
    line-height 1.4em
    p
      margin 1.58rem 0

.get-started
  margin-top 4.11rem
  .try.button
    color darken(#838383, 21%)
    border-radius 2px
    min-height 2.62rem
    min-width 11.33rem
    line-height 2.62rem
    text-decoration none
    font-size 1.26rem

// description
h2.heading,
h3.heading
  color darken(#f3f3f3, 66%)

.title
  h2.heading
    font-weight bold
    font-size 2.57em
  .description
    font-size 1.18em


// component
.grid.about
  padding-top 1.66rem
  padding-bottom 0

.nav
  margin-top 2.48rem
  .link
    font-weight 300
    text-decoration none
    letter-spacing 0.05em
  .link.active,
  .link:hover
    color darken(#838383, 21%)

.line
  border 1px dashed darken(#ededed, 33%)
  width 7.24rem

.announcement
  background-color #705e8d
  color #FFFFFF
  display block
  font-size 18px
  font-weight 400
  box-shadow 0 0 0.14rem darken(#f3f3f3, 51%)

.newsletter
  input[type="text"]
    border 1px solid lighten(#838383, 21%)
    width 12.85rem
  input.secondary.button
    color darken(#838383, 9%)
    border 1px solid #f3f3f3
    border-radius 1px
    min-height 1.92rem
    min-width 8.43rem
    font-size 0.88em
    &:hover
      color darken(#838383, 36%)
      border-color darken(#f3f3f3, 9%)
      background-color lighten(#f3f3f3, 28%)

// image
.screenshot
  img
    max-width 980px
    max-height 587px
    width 90%
    border 1px solid darken(#efefef, 3%)
    box-shadow 0.21rem 0.21rem 0.18rem darken(#f3f3f3, 18%)

// svg
svg.icon
  fill #4e575f

svg.icon.pink
  fill #f45660


// media queries (incl. layout)
@media only screen and (max-width: 768px)
  .announcement
    padding 0.42rem 0.28rem 0.28rem 0.28rem
    p
      font-size 0.95em
      font-weight 300
      line-height 2.81rem
      padding 0.2rem 0.02rem

  input[type="submit"]
    display block
    margin-top 1.26rem
    padding 0.18rem 0.62rem

@media only screen and (max-width: 620px)
  .announcement
    padding 0.72rem 0.28rem 0.54rem 0.28rem
    p
      font-size 0.95em
      font-weight 300
      line-height 1.96rem
      padding 0.2rem 0.02rem
