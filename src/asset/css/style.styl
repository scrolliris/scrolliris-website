body
  color #838383
  background-color #fbfbfb

// general tag
a
  color #a380d8
  text-decoration none
  display inline-block

a[target="_blank"]
  &:hover
    text-decoration underline wavy darkgray !important

input[type="text"]
  border-radius 2px
  border 1px solid #333333
  padding 0.26rem 0.46rem
  margin 0 0.38rem
  min-width 13.12rem

// section
header
  .brand
    display inline-block
    margin 0 0 0 0.818rem
  .logo
    display block
    line-height 0.8em
    margin 0
    padding 0.28rem 0 0.06rem 0
    vertical-align middle
  .logo-mark
    display inline-block
    margin-right 0.68rem
  .logo-type
    display inline-block
    vertical-align top
    margin 0.08rem 0 0 0

.footer
  background-color #454545
  background linear-gradient(#1f1d1f, #141412 38%)
  color #ffffff
  ul
    padding-left 0
    li
      list-style none
      line-height 1.15em
  ul.legal
    li
      line-height 2.2em


// heading
.content
  h2
    font-size 1.8rem
  h3
    font-size 0.95rem
    font-weight bold
    line-height 1.4em
    p
      margin 1.58rem 0

.get-started
  margin-top 4.11rem
  .try.button
    color darken(#838383, 21%)
    border-radius 2px
    min-height 2.62rem
    min-width 11.33rem
    line-height 2.62rem
    text-decoration none
    font-size 1.26rem

// description
h2.heading,
h3.heading
  color darken(#f3f3f3, 66%)

.title
  h2.heading
    font-weight bold
    font-size 2.57em
  .description
    padding-left 0.62rem
    padding-right 0.62rem
    font-size 1.18em


// component
.grid.about
  padding-top 1.66rem
  padding-bottom 0

.nav
  .link
    font-weight 300
    text-decoration none
    letter-spacing 0.05em
  .link.active,
  .link:hover
    color darken(#838383, 21%)
    text-decoration underline darkgray

.wrapper > header
  .nav
    li
      a.active.link
        color #888888

.grid.link
  svg.icon
    display block
  span.support,
  span.changelog,
  span.documentation
    display block
    margin 2.02rem 0
  .signup.button
    margin 1.24rem 0 2.28rem 0
    padding 0.45rem 1.49rem
  code
    border none
    border-radius 0
    &:hover
      text-decoration underline

// image
.grid.screenshot
  ul
    list-style none
    li
      display inline-block
      margin 0 1.22rem 1.4rem 0
  img
    max-width 980px
    max-height 587px
    width 90%
    border 1px solid darken(#efefef, 3%)
    box-shadow 0.21rem 0.21rem 0.18rem darken(#f3f3f3, 18%)

// svg
svg.icon
  display inline-block
  margin 0
  padding 0.2rem 0 0 0
  fill #4e575f

svg.icon.pink
  fill #f45660


// media queries (incl. layout)

// normal
@media only screen and (max-width: 768px)
  input[type="submit"]
    display block
    margin-top 1.26rem
    padding 0.18rem 0.62rem

  .mobile-hidden
    display none

  header
    .brand
      margin-top 0.384rem

// medium
@media only screen and (max-width: 640px)
  .logo-type
    margin 0.18rem 0 0 0

// small
@media only screen and (max-width: 480px)
  .title h2.heading
    font-size 1.71em

  .feature h2.heading
    font-size 1.31em
    text-align left
    padding-left 1.08rem

  .header,
  .description
    padding-left 0.56rem
    padding-right 0.56rem

  p.description,
  p.text
    text-align left
